<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.4.0/b-html5-1.4.0/b-print-1.4.0/fh-3.1.2/se-1.2.2/datatables.min.css" />
        <link rel="stylesheet" type="text/css" href="../css/modal.css">
        <link rel="stylesheet" type="text/css" href="../css/sweetalert2.min.css">
</head>

<body>
    <form id="hiddenForm" method="post" action="#">
        <input type="hidden" name="rowData" id="rowData" value="">
    </form>
    <!-- content -->
    <div class="container-fluid">
        <!-- breadcrumb -->
        <ol class="breadcrumb ">
            <li><a class="active">Home</a></li>
        </ol>
        <div class="wizard">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Book Management
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="pull-right">
                                <strong><a href="#" id="addBook"><i class="fa fa-plus" aria-hidden="true"></i> Add Book</a></strong>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive independent">
                        <table class="table table-hover table-condensed table-bordered table-striped " id="bookTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Author</th>
                                    <th>Publication</th>
                                    <th>Genre</th>
                                  <!--  <th>Date Bought</th>
                                    <th>Date Read</th> -->
                                    <th>Review</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- table responsive -->
                </div>
                <!-- panel-body -->
            </div>
            <!-- panel -->
        </div>
        <!-- wizard -->
    </div>
    <!-- container fluid -->
    <footer class="container-fluid">
        <% include ../partials/Footer %>
    </footer>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.4.0/b-html5-1.4.0/b-print-1.4.0/fh-3.1.2/se-1.2.2/datatables.min.js"></script>
    <!-- IE support for promise -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
    <script type="text/javascript" src="../js/sweetalert2.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
        //Refer - https://datatables.net/reference/event/error
       // $.fn.dataTable.ext.errMode = 'none';
        // We are using Datatables - https://datatables.net/examples/data_sources/ajax.html

        var table = $('#bookTable').DataTable({
            /*dom: 'lfrtipB',*/
            "ajax": {
                "url": "/book",
                "type": "GET",
                "dataSrc": 'result'
            },

            dom: '<"col-sm-4"l><"col-sm-4"fr><"col-sm-4 text-right"B><t><"col-sm-4"i><"col-sm-8"p>',
            "columns": [ { "data": "id" },
                { "data": "name"},
                { "data": "author" },
                { "data": "publication"},
                { "data": "genre"},
                //{ "data": "dateRead"},
               // { "data": "dateBought"},
                { "data": "review"}
            ],
            "lengthMenu": [
                [5, 10, 20, 50, -1],
                [5, 10, 20, 50, "All"]
            ],
            "order": [
                [0, 'asc']
            ],
            'select': {
                'style': 'single' //multi - to select multiple rows
            },
            buttons: [{
                    text: '<i class="fa fa-pencil" aria-hidden="true"></i> Edit',
                    className: 'btn-sm btn-primary editGroup'
                },
                {
                    text: '<i class="fa fa-trash-o" aria-hidden="true"></i> Delete',
                    className: 'btn-sm btn-danger deleteButton',
                    extent: 'remove'
                }
            ]

        });
        new $.fn.dataTable.Buttons(table, {
            buttons: [{
                extend: 'excel',
                className: "btn-success btn-sm",
                text: 'Export to Excel'
            }]
        });

        table.buttons(1, null).container().appendTo(
            table.table().container()
        );

        $('.deleteButton').click(function() {
            if (table.row('.selected').data() == undefined) {
                swal({
                    title: "Select a Book",
                    text: "Please select the Book by clicking on their row.",
                    type: "info"
                })
                return;
            }
            var bookId = table.row('.selected').data().id;
            var name = table.row('.selected').data().name;

            swal({
                title: "Confirm Delete",
                text: "Are you sure you want to Delete " + name + "?",
                allowOutsideClick: false,
                showCancelButton: true,
                confirmButtonText: 'Yes'
            }).then(function(result) {
                if (result.value) {
                    $.ajax({
                        type: 'DELETE',
                        url: '/book/' + bookId,
                        success: function(result) {
                            //refer- https://datatables.net/examples/api/select_single_row.html
                            table.row('.selected').remove().draw(false);
                            swal({
                                title: "Success",
                                type: "success",
                                text: result.message
                            });
                        },
                        error: function(error) {
                            swal({
                                title: "Error",
                                type: "error",
                                text: error.message
                            });
                        }
                    }); /*ajax*/
                }
            })
        });


        //TODO: edit the selected row
        //send the row data to add group-like page for editing
        $('.editGroup').click(function() {
            if (table.row('.selected').data() == undefined) {
                swal({
                    title: 'Select a Book',
                    text: 'Please select the Book by clicking on their row.',
                    type: 'info'
                })
                return;
            }
            // JSON.stringify turns a Javascript object into JSON text and stores that JSON text in a string.
            var rowData = JSON.stringify(table.row('.selected').data());
            //console.log(rowData);
            $('#hiddenForm input[name="rowData"]').val(rowData);
            $('#hiddenForm').attr('action', '/editBook');
            $('#hiddenForm').submit();
        });


        //navigate to Add book page
        $('#addBook').click(function(event) {
            event.preventDefault();
            $('#hiddenForm').attr('action', '/addBook');
            $('#hiddenForm').submit();
        })

    });
    </script>
</body>

</html>